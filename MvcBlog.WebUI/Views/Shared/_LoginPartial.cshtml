@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @HttpContext.Current.User.Identity.Name
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "LogOff", "Security")

        </li>
        @*<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
        <li>@Html.ActionLink("Log off", "LogOff", "Security")</li> 
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Security", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Security", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
